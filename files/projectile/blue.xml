<Entity name="$projectile_default">

  <Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      mass="0.015"
      apply_terminal_velocity="0"
      gravity_y="0"
      gravity_x="0"
    ></VelocityComponent>
  </Base>

  <ProjectileComponent
    _enabled="1"
    lob_min="0.8"
    lob_max="1.3"
    speed_min="650"
    speed_max="650"
    direction_random_rad="0.02"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0"
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    lifetime="120"
    damage="0"
    velocity_sets_scale="0"
    lifetime_randomness="1"
    ragdoll_force_multiplier="1"
    hit_particle_force_multiplier="0.35"
    camera_shake_when_shot="3.0"
    create_shell_casing="0"
    bounces_left="0"
    ground_penetration_coeff="0.2"
    penetrate_entities="1"
    shoot_light_flash_radius="100"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_laser.xml"
    knockback_force="0.4"
    go_through_this_material="meat"
  >
    <config_explosion
      never_cache="1"
      camera_shake="0.1"
      explosion_radius="4"
      explosion_sprite="data/particles/explosion_016_electric.xml"
      explosion_sprite_lifetime="0"
      create_cell_probability="0"
      hole_destroy_liquid="1"
      hole_enabled="1"
      ray_energy="1"
      damage="0.0"
      load_this_entity="mods/portalgun/files/portals/portal_blue.xml"

      hole_image="data/temp/explosion_hole.png"
      particle_effect="0"
      damage_mortals="1"
      physics_explosion_power.min="0.2"
      physics_explosion_power.max="0.3"
      physics_throw_enabled="1"
      shake_vegetation="1"
      sparks_count_max="20"
      sparks_count_min="7"
      sparks_enabled="0"
      light_enabled="0"
      stains_enabled="1"
      stains_radius="1"
    ></config_explosion>
  </ProjectileComponent>

  <SpriteComponent
    _enabled="1"
    alpha="1"
    image_file="mods/portalgun/files/projectile/gfx.xml"
    offset_y="2"
    next_rect_animation=""
    rect_animation=""
  ></SpriteComponent>

  <LightComponent
    _enabled="1"
    radius="40"
    r="52"
    g="191"
    b="255"
  ></LightComponent>

  <ParticleEmitterComponent
    emitted_material_name="plasma_fading"
    gravity.y="0.0"
    lifetime_min="0.2"
    lifetime_max="0.5"
    count_min="8"
    count_max="10"
    render_on_grid="1"
    fade_based_on_lifetime="1"
    cosmetic_force_create="0"
    airflow_force="1.5"
    airflow_time="0.15"
    airflow_scale="0.05"
    emission_interval_min_frames="0"
    emission_interval_max_frames="0"
    emit_cosmetic_particles="1"
    is_emitting="1"

    is_trail="1"
    x_pos_offset_min="-2"
    x_pos_offset_max="2"
    y_pos_offset_min="-1"
    y_pos_offset_max="1"
  ></ParticleEmitterComponent>

  <AudioComponent
    file="data/audio/Desktop/projectiles.snd"
    event_root="player_projectiles/bullet_laser"
  ></AudioComponent>
  <AudioComponent
    file="data/audio/Desktop/projectiles.snd"
    event_root="player_projectiles/bullet_heavy_slow"
  ></AudioComponent>

</Entity>

