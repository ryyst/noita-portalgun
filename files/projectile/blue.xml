<Entity name="$projectile_default">

  <Base file="mods/portalgun/files/projectile/base.xml" >
    <ProjectileComponent
      muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_laser.xml"
    >
      <config_explosion
        load_this_entity="mods/portalgun/files/portals/portal_blue.xml"
      ></config_explosion>
    </ProjectileComponent>

    <ParticleEmitterComponent
      emitted_material_name="plasma_fading"
    ></ParticleEmitterComponent>

    <LightComponent
      r="52"
      g="191"
      b="255"
    ></LightComponent>

    <SpriteComponent
      image_file="mods/portalgun/files/projectile/gfx_blue.xml"
    ></SpriteComponent>
  </Base>

  <!-- Special case, because blue is shot normally from an Action,
       while orange is shot manually. -->
  <LuaComponent
    _enabled="1"
    script_source_file="mods/portalgun/files/projectile/set_blue_angle.lua"
    execute_on_removed="1"
    execute_times="1"
  ></LuaComponent>
  
  <AudioComponent
	file="mods/portalgun/files/audio/Desktop/portal.snd"
	event_root="player_projectiles/portal_bullet_blue"
	set_latest_event_position="1" >
  </AudioComponent>
</Entity>
